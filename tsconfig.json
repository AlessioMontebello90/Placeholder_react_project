{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Additional Options */
    "jsx": "react-jsx",

    /* Modules */
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Output */
    "outDir": "./dist",
    "sourceMap": true,

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"]
    },

    /* Type Checking */
    "allowSyntheticDefaultImports": true,

    /* Types */
    "types": ["jest"]  // Aggiunto per includere i tipi di Jest
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
